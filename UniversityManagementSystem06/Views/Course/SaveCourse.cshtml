
@{
    ViewBag.Title = "SaveCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var deptList = ViewBag.departmentList;
    var semesterList = ViewBag.semesterList;
}

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    @*<title>Bootstrap 101 Template</title>*@

    <!-- Bootstrap -->

    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />
</head>
<body>






    <div align="center">
        @if (@ViewBag.Message != null)
        {
            <span id="success-alert" class="text-info">@ViewBag.Message</span>}
    </div>

    <br />

    <div>
        <form method="post" action="SaveCourse">
            <fieldset>
                <legend>Save Course</legend>

                <div class="form-group">
                    <label for="exampleInputEmail1">Course Code</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter Course Code" minlength="5" name="courseCode" required>
                    <small id="emailHelp" class="form-text text-muted">Code must be at least 5 characters long</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Course Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter Course Name" name="courseName" required>
                    <small id="emailHelp" class="form-text text-muted fade">Code must be at least 5 characters long</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Course Credit</label>
                    <input class="form-control" aria-describedby="emailHelp" placeholder="Select Course Credit" type="number" name="courseCredit" max="5.0" min="0.5" step="0.5" required>
                    <small id="emailHelp" class="form-text text-muted ">Credit can not be less than 0.5 and more than 5.0</small>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Course Description</label>
                    <textarea class="form-control" id="exampleTextarea" name="courseDescription" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleSelect1">Course Department</label>
                    <select class="form-control" id="exampleSelect1" required name="departmentId">
                        <option></option>
                        @foreach (var a in deptList)
            {
                <option value="@a.DepartmentId">@a.DepartmentCode</option>
}
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleSelect1">Course Semester</label>
                    <select class="form-control" id="exampleSelect1" required name="semesterId">
                        <option></option>
                        @foreach (var aa in semesterList)
            {
                <option value="@aa.semesterId">@aa.semesterName</option>
}
                    </select>
                </div>
                <button type="submit" class="btn btn-info">Submit</button>
                <button type="submit" class="btn btn-info" onclick="location.href='@Url.Action("ViewAllCourses", "Course")'">View List</button>

            </fieldset>
        </form>

    </div>








</body>

</html>




