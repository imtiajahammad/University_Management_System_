@using UniversityManagementSystem06.Models;
@{
    ViewBag.Title = "ViewAllAssignedTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CourseAssignToTeacherModel> list = ViewBag.CourseAssignToTeacherModelList;
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
</head>
<body>
    <h3 align="center"><p class="text-muted">View All Assigned Teachers</p></h3>
    <div align="center">
        @if (ViewBag.MessageViewAssignedTeachers != null)
        {
            <span>@ViewBag.MessageViewAssignedTeachers</span>
        }
    </div>

    <table class="table table-hover">
        <thead>
            <tr class="">
                <th scope="col">Department</th>
                <th scope="col">Teacher</th>
                <th scope="col">Credit to be taken</th>
                <th scope="col">Remaining Credit</th>
                <th scope="col">Course Code</th>
                <th scope="col">Course Name</th>
                <th scope="col">Course Credit</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CourseAssignToTeacherModel aCourseAssignToTeacherModel in list)
            {
            <tr class=" badge-secondary">
                <td align="center">@aCourseAssignToTeacherModel.Department.DepartmentName</td>
                <td align="center">@aCourseAssignToTeacherModel.Teacher.TeacherName</td>
                <td align="center">@aCourseAssignToTeacherModel.Teacher.TeacherCreditToBeTaken</td>
                <td align="center">@aCourseAssignToTeacherModel.TeacherRemainingCredit</td>
                <td align="center">@aCourseAssignToTeacherModel.Course.courseCode</td>
                <td align="center">@aCourseAssignToTeacherModel.Course.courseName</td>
                <td align="center">@aCourseAssignToTeacherModel.Course.courseCredit</td>


                <td align="center"> <a href="@Url.Action("EditAssignedTeacher", "CourseAssignToTeacher", new { id=aCourseAssignToTeacherModel.CourseAssignToTeacherId})">Edit</a> | <a href="@Url.Action("DeleteAssignedTeacher", "CourseAssignToTeacher", new { Id=aCourseAssignToTeacherModel.CourseAssignToTeacherId})">Delete</a> </td>
            </tr>
            }

        </tbody>
    </table>
    <div>
        <button style="float:right;" type="button" class="btn btn-info" onclick="location.href='@Url.Action("ViewAllAssignedTeachers", "CourseAssignToTeacher")'">Refresh</button>
        <button style="float:right;" type="button" class="btn btn-info" onclick="location.href='@Url.Action("AssignTeacher", "CourseAssignToTeacher")'">Add New</button>
    </div>




